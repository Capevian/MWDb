<h1>Registar</h1>

<%= form_for(@user) do |f| %>
    <%=  render 'shared/error_messages', :object=> f.object %>
    <div class="field">
      <%= f.label :username %> <br/>
      <%= f.text_field :username %>
    </div>
    <div class="field">
      <%= f.label :email %><br/>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password %><br/>
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation , "Confirmar password" %><br/>
      <%= f.password_field :password_confirmation%>
    </div>
    <div class="actions">
      <%= f.submit "Registar" %>
    </div>

<% end %>