<h1>Novo Modelo</h1>

<%= form_for(@modelo, :url => admin_modelos_path ,:html=>{:multipart=>true}) do |f| %>
    <%=  render 'shared/error_messages', :object=> f.object %>
    <div class="field">
      <%= f.label :nome %> <br/>
      <%= f.text_field :nome %>
    </div>
    <div class="field">
      <%= f.label "Ano de Lançamento" %><br/>
      <%= f.text_field :ano %>
    </div>
    <div class="field">
      <%= f.label :website %> <br/>
      <%= f.text_field :website %>
    </div>
    <div class="field">
      <%= f.label "Logo (Tamanho Max 500kb)" %> <br/>
      <%= f.file_field :thumb %>
    </div>
    <div class="field">
      <%= f.label "Marca" %>
      <%= f.collection_select :marca_id ,@marcas, :id, :nome ,{:prompt => true} %>
    </div>
    <br/>
    <div class="actions">
      <%= f.submit "Criar" %>
    </div>

<% end %>

<%= link_to "Voltar a Administração" , admin_path %>