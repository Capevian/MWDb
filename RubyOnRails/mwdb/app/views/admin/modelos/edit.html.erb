<h1>Editar Modelo</h1>


<%= form_for(@modelo , :url => admin_modelo_path(@modelo)) do |f| %>
    <%= render 'shared/error_messages', :object=> f.object %>
    <div class="field">
      <%= f.label :nome %><br/>
      <%= f.text_field :nome %>
    </div>
    <div class="field">
      <%= f.label :ano %> <br/>
      <%= f.text_field :ano %>
    </div>
    <div class="field">
      <%= f.label :website %> <br/>
      <%= f.text_field :website %>
    </div>
    <div class="field">
      <%= f.label "Foto de apresentação (Tamanho Max 500kb)" %> <br/>
      <%= f.file_field :thumb %>
    </div>
    <div class="field">
      <%= f.label "Marca" %><br/>
      <%= f.collection_select :marca_id ,@marcas, :id, :nome ,{:prompt => true}   %>
    </div>
    <br/>
    <div class="actions">
      <%= f.submit "Actualizar" %>
    </div>

<% end %>