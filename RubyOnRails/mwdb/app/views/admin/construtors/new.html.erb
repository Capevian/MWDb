<h1>Novo Construtor</h1>

<%= form_for(@construtor, :url => admin_construtors_path ,:html=>{:multipart=>true}) do |f| %>
    <%=  render 'shared/error_messages', :object=> f.object %>
    <div class="field">
      <%= f.label :nome %> <br/>
      <%= f.text_field :nome %>
    </div>
    <div class="field">
      <%= f.label "Logo (Tamanho Max 500kb)" %> <br/>
      <%= f.file_field :logo %>
    </div>
    <div class="field">
      <%= f.label :website %>  <br/>
      <%= f.text_field :website %>
    </div>
    <div class="actions">
      <%= f.submit "Criar" %>
    </div>

<% end %>

<%= link_to "Voltar a Administração" , admin_path %>