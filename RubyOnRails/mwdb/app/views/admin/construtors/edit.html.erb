<h1>Editar Construtor</h1>


<%= form_for(@construtor , :url => admin_construtor_path(@construtor)) do |f| %>
    <%= render 'shared/error_messages', :object=> f.object %>
    <div class="field">
      <%= f.label :nome %><br/>
      <%= f.text_field :nome %>
    </div>
    <div class="field">
      <%= f.label "Novo Logo (Tamanho Max 500kb)" %> <br/>
      <%= f.file_field :logo %>
    </div>
    <div class="field">
      <%= f.label :website %>  <br/>
      <%= f.text_field :website %>
    </div>
    <br/>
    <div class="actions">
      <%= f.submit "Actualizar" %>
    </div>

<% end %>