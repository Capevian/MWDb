<h1>Tipos de Miniaturas</h1>

<%= will_paginate %>

<div class="listas">
  <% @tipos.each do |tipo| %>
    <div>
        <%= link_to utilizadores_tipo_marcas_path(tipo.id) do %>
          <%= image_tag("/application/code_tipo_thumb?id=#{tipo.id}", :alt => "Image", :size => "150x120" ) %>
          <span class="listasDesc"><%= tipo.descricao %></span>
        <% end %>
    </div>
  <% end %>
</div>

<%= will_paginate %>
<br style="clear: both;"/>